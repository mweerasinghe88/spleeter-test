{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --timeout 300 --workers 1 app:app",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 30
  }
}
